<%= form_with(model: performance, local: true) do |form| %>
  <% if performance.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(performance.errors.count, "error") %> prohibited this performance from being saved:</h2>

      <ul>
      <% performance.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :client_id %>
    <%= form.select :client_id, options_for_select( Client.all.map{ |s| [s.nominative, s.id] } ) %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_area :description, id: :performance_description %>
  </div>

  <div class="field">
    <%= form.label :date %>
    <%= form.date_select :date, id: :performance_date %>
  </div>

  <div class="field">
    <%= form.label :duration %>
    <%= form.number_field :duration, id: :performance_duration, step: 0.5 %>
  </div>

<!--  <div class="field">
    <%= form.label :invoiced %>
    <%= form.check_box :invoiced, id: :performance_invoiced %>
  </div>-->

  <div class="field">
    <%= form.label :rate_id %>
    <%= form.select :rate_id, options_for_select( Rate.all.map{ |s| [s.hourly_rate, s.id] } ) %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
